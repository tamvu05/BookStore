# Cấu hình cổng chạy ứng dụng (Mặc định: 3000)
PORT=3000

# Kết nối Cơ sở dữ liệu MySQL (Host, Port, User, Password từ Aiven)
DB_HOST=your_mysql_host_here
DB_PORT=your_mysql_port_here
DB_USER=your_mysql_username_here
DB_PASS=your_mysql_password_here
DB_NAME=your_database_name_here

# Cấu hình Cloudinary - Dịch vụ lưu trữ hình ảnh đám mây
CLOUD_NAME=your_cloudinary_name
CLOUD_API_KEY=your_api_key
CLOUD_API_SECRET=your_api_secret

# Cấu hình Email - Sử dụng để gửi mã OTP xác thực
# Lưu ý: MAIL_PASS là "Mật khẩu ứng dụng" của Google, không phải mật khẩu email cá nhân
MAIL_USER=your_email_address@gmail.com
MAIL_PASS=your_app_password_here

# Cấu hình Redis - Lưu trữ Session và tối ưu hiệu năng đăng nhập
REDIS_URL=redis://username:password@host:port

# Cấu hình bảo mật Session
SESSION_SECRET=a_random_secure_string_here

# Google Gemini AI API Key - Kích hoạt Chatbot thông minh hỗ trợ khách hàng
GEMINI_API_KEY=your_gemini_api_key_here