<div class="container-fluid py-4 manager-container">
    <div class="header-section mb-4 pb-3">
        <h1 class="page-title">Quản lý <%= entityName %>
        </h1>
    </div>

    <div class="row mb-4 align-items-center">
        <div class="col-lg-6 col-md-6 col-12">
            <div class="search-card card">
                <div class="card-body p-3">
                    <div class="input-group search-input-group">
                        <input type="text" class="form-control search-value" placeholder="Tìm kiếm theo tên nhân viên">
                        <button class="btn btn-search search-button" type="button">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-2.5 col-md-3 col-12">
            <div class="filter-card card">
                <div class="card-body p-3">
                    <select class="form-select status-filter-select" id="receipt-status-filter">
                        <option value="">Tất cả trạng thái</option>
                        <option value="HIEU_LUC">Có hiệu lực</option>
                        <option value="DA_HUY">Đã hủy</option>
                    </select>
                </div>
            </div>
        </div>

        <div class="col-lg-3.5 col-md-3 col-12 d-flex justify-content-end action-buttons-row">
            <div class="me-3">
                <button type="button" class="btn btn-add-primary" data-bs-toggle="modal"
                    data-bs-target="<%= modalAddSelector %>">
                    <i class="fas fa-plus"></i> Thêm <%= entityName %>
                </button>
            </div>

            <div>
                <button class="btn btn-outline-success export-button d-none">
                    Xuất excel <i class="far fa-file-excel"></i>
                </button>
            </div>
        </div>
    </div>

    <div class="table-responsive" id="table-view-manager">
        <%- include(tablePartial) %>
    </div>

    <div id="pagination-view-manager" class="mt-4">
        <%- include('partials/pagination') %>
    </div>
</div>


<!-- Modal Add -->
<%- include(modalAddPartial) %>

<% if (typeof modalUpdatePartial !== 'undefined') { %>
    <!-- Modal Update -->
    <%- include(modalUpdatePartial) %>
<% } %>

<script type="module" src="/js/paginationViewManager.js"></script>
<link rel="stylesheet" href="/css/viewManager.css">
