<div class="container-fluid py-3">
    <h1 class="mb-4">Quản lý <%= entityName %>
    </h1>

    <div class="row mb-3 justify-content-between">
        <div class="col-auto">
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="<%= modalAddSelector %>">
                <i class="fas fa-plus"></i> Thêm <%= entityName %>
            </button>
        </div>
        <div class="col-auto">
            <button class="btn btn-success">
                Xuất excel <i class="far fa-file-excel"></i>
            </button>
        </div>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Tìm kiếm theo tên <%= entityName %>">
                <button class="btn btn-search" type="button" style="background-color: #6f42c1; color: white;">
                    <i class="fas fa-search"></i>
                </button>
            </div>
        </div>
    </div>

    <div class="table-responsive" id="table-view-manager">
        <!-- table manager -->
        <%- include(tablePartial) %>
    </div>

    <div class="d-flex justify-content-center mt-4">
    </div>

    <div id="pagination-view-manager">
        <%- include('partials/pagination') %>
    </div>
</div>

<!-- Modal Add -->
 <%- include(modalAddPartial) %>

 <!-- Modal Update -->
 <%- include(modalUpdatePartial) %>

<script src="/js/paginationViewManager.js"></script>
 