<div class="container-fluid py-4 manager-container">
    <div class="header-section mb-4 pb-3">
        <h1 class="page-title">Quản lý mã giảm giá
        </h1>
    </div>

    <div class="row mb-4 align-items-center">
        <div class="col-lg-6 col-md-6 col-12">
            <div class="search-card card">
                <div class="card-body p-0">
                    <div class="input-group search-input-group">
                        <input type="text" class="form-control search-value" placeholder="Tìm kiếm theo mã giảm giá">
                        <button class="btn btn-search search-button" type="button">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-2.5 col-md-3 col-12">
            <div class="filter-card card">
                <div class="card-body p-0">
                    <select class="form-select status-filter-select" id="order-status-filter">
                        <option value="">Tất cả trạng thái</option>
                        <option value="HOAT_DONG">Hoạt động</option>
                        <option value="VO_HIEU">Vô hiệu</option>
                    </select>
                </div>
            </div>
        </div>

        <div class="col-lg-3.5 col-md-3 col-12 d-flex justify-content-end action-buttons-row">
            <button type="button" class="btn btn-add-primary" data-bs-toggle="modal"
                data-bs-target="#voucher-modal">
                <i class="fas fa-plus"></i> Tạo mã giảm giá
            </button>
        </div>
    </div>

    <div class="table-responsive" id="table-view-manager">
        <%- include('partials/voucher/tableVoucher') %>
    </div>

    <div id="pagination-view-manager" class="mt-4">
        <%- include('partials/pagination') %>
    </div>
</div>

<%- include('partials/voucher/modalVoucher') %>


<script type="module" src="/js/paginationViewManager.js"></script>
<link rel="stylesheet" href="/css/viewManager.css">
