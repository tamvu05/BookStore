<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="fw-bold text-primary mb-1">Đơn hàng #<%= order.MaDH %></h3>
            <span class="text-muted small">Ngày đặt: <%= new Date(order.NgayDat).toLocaleDateString('vi-VN') %></span>
        </div>
        
        <div>
            <% if (order.TrangThai === 'CHO_XAC_NHAN') { %>
                <span class="badge bg-warning text-dark fs-6 px-3 py-2 rounded-pill">Chờ xác nhận</span>
            <% } else if (order.TrangThai === 'CHO_THANH_TOAN') { %>
                <span class="badge bg-warning text-dark fs-6 px-3 py-2 rounded-pill">Chờ thanh toán</span>
            <% } else if (order.TrangThai === 'DANG_CHUAN_BI_HANG') { %>
                <span class="badge bg-info text-white fs-6 px-3 py-2 rounded-pill">Đang chuẩn bị hàng</span>
            <% } else if (order.TrangThai === 'DANG_GIAO') { %>
                <span class="badge bg-primary fs-6 px-3 py-2 rounded-pill">Đang giao hàng</span>
            <% } else if (order.TrangThai === 'DA_GIAO') { %>
                <span class="badge bg-success fs-6 px-3 py-2 rounded-pill">Giao thành công</span>
            <% } else { %>
                <span class="badge bg-danger fs-6 px-3 py-2 rounded-pill">Đã hủy</span>
            <% } %>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm rounded-4 h-100">
                <div class="card-body p-4">
                    <h6 class="fw-bold text-uppercase text-muted mb-3 small">Thông tin nhận hàng</h6>
                    <h5 class="fw-bold mb-2"><%= order.TenNguoiNhan %></h5>
                    <p class="mb-1 text-muted"><i class="bi bi-telephone me-2"></i> <%= order.SDT %></p>
                    <p class="mb-0 text-muted"><i class="bi bi-geo-alt me-2"></i> <%= order.DiaChiNhan %></p>
                    
                    <% if (order.MucDich) { %>
                        <div class="mt-3 pt-3 border-top">
                            <small class="text-muted d-block">Ghi chú:</small>
                            <span><%= order.MucDich %></span>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
                <div class="card-header bg-white py-3 border-bottom">
                    <h6 class="fw-bold m-0">Sản phẩm đã mua</h6>
                </div>
                <div class="table-responsive">
                    <table class="table align-middle mb-0">
                        <tbody>
                            <% items.forEach(item => { %>
                                <tr>
                                    <td class="ps-4 py-3" style="width: 60px;">
                                        <img src="<%= item.HinhAnh %>" class="rounded border" style="width: 50px; height: 70px; object-fit: cover;">
                                    </td>
                                    <td>
                                        <div class="fw-bold"><%= item.TenSach %></div>
                                        <small class="text-muted">x<%= item.SoLuong %></small>
                                    </td>
                                    <td class="text-end pe-4 fw-bold">
                                        <%= new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(item.DonGia) %>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                        <tfoot class="bg-light">
                            <tr>
                                <td colspan="2" class="text-end py-2 fw-bold text-muted border-0">Tạm tính:</td>
                                <td class="text-end pe-4 py-2 fw-bold border-0">
                                    <%= new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(subTotal) %>
                                </td>
                            </tr>

                            <% if (discountAmount > 0) { %>
                                <tr>
                                    <td colspan="2" class="text-end py-2 fw-bold text-success border-0">
                                        <i class="bi bi-ticket-fill me-1"></i>Voucher giảm giá 
                                        <% if (order.MaVC) { %> 
                                            <span class="text-uppercase">(<%= order.MaVC %>)</span>
                                        <% } %>:
                                    </td>
                                    <td class="text-end pe-4 py-2 text-success fw-bold border-0">
                                        -<%= new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(discountAmount) %>
                                    </td>
                                </tr>
                            <% } %>

                            <tr>
                                <td colspan="2" class="text-end py-3 fw-bold text-dark h5 border-top">Tổng cộng:</td>
                                <td class="text-end pe-4 py-3 text-danger fs-5 fw-bold border-top">
                                    <%= new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(order.TongTien) %>
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
            
            <div class="mt-4 text-end">
                <a href="/order/history" class="btn btn-outline-secondary rounded-pill px-4">
                    <i class="bi bi-arrow-left me-1"></i> Quay lại
                </a>

                <% if (order.TrangThai === 'CHO_THANH_TOAN') { %>
                    <button class="btn btn-success rounded-pill px-4 ms-2" onclick="retryPaymentMoMo('<%= order.MaDH %>')">
                        <i class="bi bi-credit-card me-1"></i> Thanh toán MoMo
                    </button>
                    <button class="btn btn-outline-danger rounded-pill px-4 ms-2" onclick="cancelOrder('<%= order.MaDH %>')">
                        <i class="bi bi-x-circle me-1"></i> Hủy đơn
                    </button>
                <% } else if (order.TrangThai === 'CHO_XAC_NHAN' || order.TrangThai === 'DANG_CHUAN_BI_HANG') { %>
                    <button class="btn btn-outline-danger rounded-pill px-4 ms-2" onclick="cancelOrder('<%= order.MaDH %>')">
                        <i class="bi bi-x-circle me-1"></i> Hủy đơn
                    </button>
                <% } %>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    async function cancelOrder(orderId) {
        const confirm = await Swal.fire({
            title: 'Hủy đơn hàng?',
            text: "Bạn có chắc muốn hủy đơn hàng #" + orderId + " không?",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Đồng ý hủy',
            cancelButtonText: 'Không'
        });

        if (!confirm.isConfirmed) return;

        try {
            const response = await fetch('/order/cancel', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ orderId })
            });

            const result = await response.json();

            if (result.success) {
                await Swal.fire('Thành công!', result.message, 'success');
                window.location.href = '/order/history';
            } else {
                Swal.fire('Thất bại!', result.message, 'error');
            }
        } catch (error) {
            Swal.fire('Lỗi!', 'Không thể kết nối đến máy chủ', 'error');
            console.error(error);
        }
    }

    async function retryPaymentMoMo(orderId) {
        try {
            // Tạo form để submit thanh toán MoMo
            const form = document.createElement('form');
            form.method = 'POST';
            form.action = '/api/momo/retry-payment';
            
            const input = document.createElement('input');
            input.type = 'hidden';
            input.name = 'orderId';
            input.value = orderId;
            
            form.appendChild(input);
            document.body.appendChild(form);
            form.submit();
        } catch (error) {
            Swal.fire('Lỗi!', 'Không thể kết nối đến máy chủ', 'error');
            console.error(error);
        }
    }
</script>