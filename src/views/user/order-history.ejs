<div class="container py-5">
    <h3 class="fw-bold mb-4 text-primary"><i class="bi bi-clock-history"></i> Lịch Sử Đơn Hàng</h3>

    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="py-3 ps-4">Mã đơn</th>
                        <th class="py-3">Ngày đặt</th>
                        <th class="py-3">Người nhận</th>
                        <th class="py-3">Tổng tiền</th>
                        <th class="py-3">Trạng thái</th>
                        <th class="py-3 text-end pe-4">Chi tiết</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (orders && orders.length > 0) { %>
                        <% orders.forEach(order => { %>
                            <tr>
                                <td class="ps-4 fw-bold text-primary">#<%= order.MaDH %></td>
                                <td><%= new Date(order.NgayDat).toLocaleDateString('vi-VN') %></td>
                                <td>
                                    <div class="fw-bold text-dark"><%= order.TenNguoiNhan %></div>
                                    <div class="small"><%= order.DiaChiNhan %></div>
                                    <small class="text-muted"><%= order.SDT %></small>
                                </td>
                                <td class="fw-bold text-danger">
                                    <%= new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(order.TongTien) %>
                                </td>
                                <td>
                                    <% if (order.TrangThai === 'CHO_XAC_NHAN') { %>
                                        <span class="badge bg-warning text-dark">Chờ xác nhận</span>
                                    <% } else if (order.TrangThai === 'DANG_GIAO') { %>
                                        <span class="badge bg-primary">Đang giao</span>
                                    <% } else if (order.TrangThai === 'DA_GIAO') { %>
                                        <span class="badge bg-success">Thành công</span>
                                    <% } else if (order.TrangThai === 'DA_HUY') { %>
                                        <span class="badge bg-danger">Đã hủy</span>
                                    <% } else { %>
                                        <span class="badge bg-secondary"><%= order.TrangThai %></span>
                                    <% } %>
                                </td>
                                <td class="text-end pe-4">
                                    <a href="/order/detail/<%= order.MaDH %>" class="btn btn-sm btn-outline-primary rounded-pill px-3">
                                        Xem
                                    </a>

                                    <% if (order.TrangThai === 'CHO_XAC_NHAN') { %>
                                        <button class="btn btn-sm btn-outline-danger ms-2 rounded-pill px-3" onclick="cancelOrder('<%= order.MaDH %>')">
                                            Hủy
                                        </button>
                                    <% } %>
                                </td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="6" class="text-center py-5 text-muted">
                                <i class="bi bi-inbox fs-1 opacity-25"></i>
                                <p class="mt-2">Bạn chưa có đơn hàng nào.</p>
                                <a href="/book" class="btn btn-primary btn-sm rounded-pill">Mua sắm ngay</a>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    async function cancelOrder(orderId) {
        // 1. Hỏi xác nhận
        const confirm = await Swal.fire({
            title: 'Hủy đơn hàng?',
            text: "Bạn có chắc muốn hủy đơn hàng #" + orderId + " không?",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Đồng ý hủy',
            cancelButtonText: 'Không'
        });

        if (!confirm.isConfirmed) return;

        // 2. Gửi yêu cầu lên Server
        try {
            const response = await fetch('/order/cancel', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ orderId })
            });

            const result = await response.json();

            if (result.success) {
                await Swal.fire('Thành công!', result.message, 'success');
                location.reload(); // Load lại trang để cập nhật trạng thái
            } else {
                Swal.fire('Thất bại!', result.message, 'error');
            }
        } catch (error) {
            Swal.fire('Lỗi!', 'Không thể kết nối đến máy chủ', 'error');
            console.error(error);
        }
    }
</script>