<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6"> <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <h2 class="fw-bold text-primary">Tạo Tài Khoản Mới</h2>
                        <% if (typeof error !== 'undefined' && error) { %>
                            <div class="alert alert-danger text-center py-2 mb-4" role="alert">
                                <i class="fa-solid fa-circle-exclamation me-1"></i> <%= error %>
                            </div>
                        <% } %>
                        <p class="text-muted">Tham gia cộng đồng đọc sách cùng chúng tôi.</p>
                    </div>

                    <form action="/register" method="POST">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control rounded-pill px-4" id="fullname" name="fullname" placeholder="Họ và tên" required>
                            <label for="fullname" class="px-4">Họ và tên</label>
                        </div>

                        <div class="form-floating mb-3">
                            <input type="email" class="form-control rounded-pill px-4" id="email" name="email" placeholder="name@example.com" required>
                            <label for="email" class="px-4">Địa chỉ Email</label>
                        </div>

                        <div class="row g-2">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input type="password" class="form-control rounded-pill px-4" id="password" name="password" placeholder="Password" required>
                                    <label for="password" class="px-4">Mật khẩu</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input type="password" class="form-control rounded-pill px-4" id="confirmPassword" name="confirmPassword" placeholder="Confirm" required>
                                    <label for="confirmPassword" class="px-4">Nhập lại mật khẩu</label>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid mb-4">
                            <button type="submit" class="btn btn-primary rounded-pill py-3 fw-bold shadow-sm hover-up">
                                Đăng Ký Tài Khoản
                            </button>
                        </div>
                    </form>

                    <div class="text-center small">
                        Đã có tài khoản? 
                        <a href="/login" class="text-primary fw-bold text-decoration-none">Đăng nhập tại đây</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>